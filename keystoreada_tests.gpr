with "/home/ciceron/src/ada-awa/ada-util/config";
with "/home/ciceron/src/ada-awa/ada-util/utilada_sys";
with "/home/ciceron/src/ada-awa/ada-util/utilada_unit";
with "keystoreada";

project KeystoreAda_Tests is

   Use_Fuse   : Config.Yes_No := "yes";

   Mains := ("keystore_harness.adb");
   for Main use Mains;
   for Source_Dirs use ("regtests");
   for Object_Dir use "./" & Config'Object_Dir & "/obj";
   for Exec_Dir use "./" & Config'Exec_Dir & "/bin";

   case Use_Fuse is
      when "yes" =>
         for Source_Dirs use Project'Source_Dirs
            & ("regtests/fuse");

      when "no" =>
         for Source_Dirs use Project'Source_Dirs
            & ("regtests/no-fuse");

   end case;

   package Binder renames Config.Binder;
   package Builder renames Config.Builder;
   package Compiler renames Config.Compiler;
   package Linker renames Config.Linker;

end KeystoreAda_Tests;
